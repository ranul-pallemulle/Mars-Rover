<SETTINGS>

  <DIAGNOSTICS>
    <STATE> Disabled </STATE>
    <PORT> 5570 </PORT>
  </DIAGNOSTICS>  

  <MODE> LAPTOP </MODE>
  <!-- <MODE> RASPBERRYPI </MODE> -->
  
  <PWMHARDWARE> ONBOARD </PWMHARDWARE>
  <!-- <PWMHARDWARE> EXTERNAL </PWMHARDWARE> -->
  <!-- <I2C> -->
  <!--   <PIN TYPE="SCK"> 2 </PIN> -->
  <!--   <PIN TYPE="SDA"> 3 </PIN> -->
  <!-- </I2C> -->

  <SOMETOPELEM> 0.2 </SOMETOPELEM>
  <SOMEOTHERTOPELEM> 0.5 </SOMEOTHERTOPELEM>

  <IP_ADDRESS> 172.24.1.1 </IP_ADDRESS>

  <CAMERA>
    <CAPTURE_FRAMERATE> 60 </CAPTURE_FRAMERATE>
    <CAPTURE_FRAME_WIDTH> 200 </CAPTURE_FRAME_WIDTH>
    <CAPTURE_FRAME_HEIGHT> 150 </CAPTURE_FRAME_HEIGHT>
    
    <STREAM_PORT> 5564 </STREAM_PORT>
    <STREAM_FRAMERATE> 30 </STREAM_FRAMERATE>
    <STREAM_FRAME_WIDTH> 640 </STREAM_FRAME_WIDTH>
    <STREAM_FRAME_HEIGHT> 480 </STREAM_FRAME_HEIGHT>
  </CAMERA>
  
  <MOTORS NAME="Wheels">
    <MOTOR NAME="Left">
      <PIN TYPE="PWM"> 17 </PIN>
      <PIN TYPE="Digital"> 4 </PIN>
    </MOTOR>
    <MOTOR NAME="Right">
      <PIN TYPE="PWM"> 18 </PIN>
      <PIN TYPE="Digital"> 5 </PIN>
    </MOTOR>
  </MOTORS>

  <MOTORS NAME="Arm">
    <MOTOR NAME="Servo1">
      <PIN TYPE="PWM"> 22 </PIN>
      <PIN TYPE="Digital"> 6 </PIN>
    </MOTOR>
    <MOTOR NAME="Servo2">
      <PIN TYPE="PWM"> 23 </PIN>
      <PIN TYPE="Digital"> 7 </PIN>
    </MOTOR>
    <MOTOR NAME="Servo3">
      <PIN TYPE="PWM"> bbbadbal </PIN>
      <PIN TYPE="Digital"> badval5 </PIN>
    </MOTOR>
    <MOTOR NAME="Gripper">
      <PIN TYPE="PWM"> 25 </PIN>
      <PIN TYPE="Digital"> 9 </PIN>
    </MOTOR>
  </MOTORS>

  <MOTORS NAME="DeployableCamera">
  </MOTORS>

  <OPMODES_DIRECTORIES>
    joystick,
    robotic_arm
  </OPMODES_DIRECTORIES>

  <RESOURCES_DIRECTORIES>
    <!-- resources/camera.py, -->
    resources/mock_motors.py
  </RESOURCES_DIRECTORIES>  

</SETTINGS>
