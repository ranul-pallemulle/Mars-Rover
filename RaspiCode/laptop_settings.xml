      <PIN TYPE="PWM"> 12 </PIN>
      <PIN TYPE="Digital"> 21 </PIN>
    </MOTOR>
  </MOTORS>

  <MOTORS NAME="Arm">
    <MOTOR NAME="Servo1">
      <PIN TYPE="Other"> 13 </PIN>
    </MOTOR>
    <MOTOR NAME="Servo2">
      <PIN TYPE="Other"> 14 </PIN>
    </MOTOR>
    <MOTOR NAME="Servo3">
      <PIN TYPE="Other"> 15 </PIN>
    </MOTOR>
    <MOTOR NAME="Gripper">
      <PIN TYPE="Other"> 12 </PIN>
    </MOTOR>
  </MOTORS>

  <MOTORS NAME="DeployableCamera">
  </MOTORS>

  <OPMODES_DIRECTORIES>
    joystick,
    robotic_arm,
    dummy_opmode
