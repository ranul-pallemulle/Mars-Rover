<SETTINGS>

  <DIAGNOSTICS>
    <STATE> Enabled </STATE>
    <PORT> 5570 </PORT>
  </DIAGNOSTICS>
  
  <!-- <IP_ADDRESS> 172.24.1.1 </IP_ADDRESS> -->
  <IP_ADDRESS> localhost </IP_ADDRESS>
  <!-- <IP_ADDRESS> 192.268.2.3 </IP_ADDRESS> -->
  <!-- <IP_ADDRESS> 10.42.0.69 </IP_ADDRESS> -->

  <CAMERA>
    <DEVICE> v4l2src </DEVICE>
    <!-- <DEVICE> avfvideosrc </DEVICE> -->
    <CAPTURE_FRAMERATE> 30 </CAPTURE_FRAMERATE>
    <CAPTURE_FRAME_WIDTH> 640 </CAPTURE_FRAME_WIDTH>
    <CAPTURE_FRAME_HEIGHT> 480 </CAPTURE_FRAME_HEIGHT>
    
    <STREAM_PORT> 5564 </STREAM_PORT>
    <STREAM_FRAMERATE> 30 </STREAM_FRAMERATE>
    <STREAM_FRAME_WIDTH> 640 </STREAM_FRAME_WIDTH>
    <STREAM_FRAME_HEIGHT> 480 </STREAM_FRAME_HEIGHT>
  </CAMERA>
  
  <MOTORS NAME="Wheels">
    <MOTOR NAME="Left">
      <PIN TYPE="PWM"> 13 </PIN>
      <PIN TYPE="Digital"> 20 </PIN>
    </MOTOR>
    <MOTOR NAME="Right">
      <PIN TYPE="PWM"> 12 </PIN>
      <PIN TYPE="Digital"> 21 </PIN>
    </MOTOR>
  </MOTORS>

  <MOTORS NAME="Arm">
    <MOTOR NAME="Servo1">
      <PIN TYPE="PWM"> 22 </PIN>
      <PIN TYPE="Digital"> 6 </PIN>
    </MOTOR>
    <MOTOR NAME="Servo2">
      <PIN TYPE="PWM"> 23 </PIN>
      <PIN TYPE="Digital"> 7 </PIN>
    </MOTOR>
    <MOTOR NAME="Servo3">
      <PIN TYPE="PWM"> 24 </PIN>
      <PIN TYPE="Digital"> 8 </PIN>
    </MOTOR>
    <MOTOR NAME="Gripper">
      <PIN TYPE="PWM"> 25 </PIN>
      <PIN TYPE="Digital"> 9 </PIN>
    </MOTOR>
  </MOTORS>

  <MOTORS NAME="DeployableCamera">
  </MOTORS>

  <OPMODES_DIRECTORIES>
    joystick,
    robotic_arm,
    dummy_opmode,
    camera_feed
  </OPMODES_DIRECTORIES>

  <RESOURCES_DIRECTORIES>
    resources/camera.py,
    resources/mock_motors.py
  </RESOURCES_DIRECTORIES>

</SETTINGS>
